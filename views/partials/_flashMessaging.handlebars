{{#if successMessage}}
    <div class="alert alert-success alert-dismissible">{{successMessage}}<button class="close" data-dismiss="alert"><span>&times;</span></button>
    </div>
{{/if}}

{{#if errorMessage}}
    <div class="alert alert-danger alert-dismissible">
        <button class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
    </div>
{{/if}}